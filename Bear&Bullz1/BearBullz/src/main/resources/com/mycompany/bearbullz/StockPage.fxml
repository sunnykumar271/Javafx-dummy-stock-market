<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>

<ScrollPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.bearbullz.StockPageController">
   <content>
      <AnchorPane prefHeight="600.0" prefWidth="700.0">
          <LineChart fx:id="stockChart" layoutX="50" layoutY="50" prefHeight="400" prefWidth="500">
              <xAxis>
                  <NumberAxis label="Time" />
              </xAxis>
              <yAxis>
                  <NumberAxis label="Price" />
              </yAxis>
          </LineChart>
          
          <Label fx:id="companyName" layoutX="50" layoutY="470" text="Company Name" />
          <Label fx:id="stockRate" layoutX="350" layoutY="470" text="Stock Rate" />
          
          <Button fx:id="buyButton" layoutX="12.0" layoutY="520" prefHeight="25.0" prefWidth="314.0" styleClass="buy-button" text="Buy" />
          <Button fx:id="sellButton" layoutX="349.0" layoutY="520" prefHeight="25.0" prefWidth="341.0" styleClass="sell-button" text="Sell" />
      </AnchorPane>
   </content>
</ScrollPane>
